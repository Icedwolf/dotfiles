bindsym Shift+XF86AudioLowerVolume exec amixer sset Capture 5%-
bindsym Shift+XF86AudioMute exec amixer sset Capture toggle
bindsym XF86AudioMute exec amixer sset Master toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 15%-
bindsym XF86MonBrightnessUp exec brightnessctl set +15%
bindsym --locked XF86AudioPlay exec dbus-send --print-reply --dest=$player /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioNext exec dbus-send --print-reply --dest=player /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=player /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym Print exec sway-interactive-screenshot
bindsym shift+Print exec sway-interactive-screenshot -s focused-window

