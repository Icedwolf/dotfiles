general {
  output_format = "i3bar"
  colors = true
  interval = 1
  markup = "pango"
}

order += "volume master"
order += "wireless *first*"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "time"

wireless *first* {
  format_up = "📶 <span color='#7aa2f7'>%essid %quality</span>"
  format_down = "📶 <span color='#f7768e'>down</span>"
}

cpu_usage {
  format = "🖥️ <span color='#7aa2f7'>%usage</span>"
}

battery 0 {
  format = "🔋 <span color='#9ece6a'>%percentage</span>"
  status_chr = "⚡ "
  status_bat = "🔋 "
  status_full = "✅ "
  status_idle = "🟢 "
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 20
}

volume master {
        format = "🔊 <span color='#bb9af7'>%volume</span>"
        format_muted = "🔇 <span color='#f7768e'>muted (%volume)</span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

memory {
  format = "💾 <span color='#e0af68'>%percentage_used</span>"
}

time {
  format = "🕐 <span color='#7dcfff'>%d-%m %H:%M:%S</span>"
}
