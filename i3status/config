general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "wireless _first_"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "time"

wireless _first_ {
  format_up = "%essid %ip %quality"
  format_down = "W: down"
}

cpu_usage {
  format = "CPU: %usage"
}

