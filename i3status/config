general {
  output_format = "i3bar"
    colors = true
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "time"
order += "battery 0"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip"
    format_down = "E: down"
}

cpu_usage {
  format = "CPU: %usage"
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
    format_down = "No battery"
    status_chr = "âš¡ "
    status_bat = "ðŸ”‹ "
    status_unk = "? "
    status_full = "â˜» "
    status_idle = "â˜» "
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

memory {
  format = "RAM: %percentage_used"
    threshold_degraded = "10%"
    threshold_critical = "5%"
}

time {
  format = "%d-%m %H:%M:%S"
}
