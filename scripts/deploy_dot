#!/bin/zsh
# This script is used to deploy this folder dotfiles config to the right directories

# FILES
ln -sf $DOTFILES/.zshrc ~/.zshrc
ln -sf $DOTFILES/tmux/.tmux.conf ~/.config/tmux/tmux.conf
ln -sf $DOTFILES/lvim/config.lua ~/.config/lvim/config.lua

# FOLDERS
ln -sf $DOTFILES/sway/* ~/.config/sway
ln -sf $DOTFILES/mako/* ~/.config/mako
ln -sf $DOTFILES/fuzzel/* ~/.config/fuzzel
ln -sf $DOTFILES/alacritty/* ~/.config/alacritty
ln -sf $DOTFILES/sway-interactive-screenshot/* ~/.config/sway-interactive-screenshot
ln -sf $DOTFILES/k9s/* ~/.config/k9s
